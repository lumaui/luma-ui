  "license": "MIT",
  "engines": {
    "node": ">=24.0.0"
  },
  "scripts": {
    "generate-docs": "npx ts-node --esm tools/generate-docs-registry.ts",
    "dev": "npm run generate-docs && nx serve docs",
    "start": "nx serve docs",
    "build": "npm run generate-docs && nx build docs",
    "build:prod": "nx build docs --configuration=production",
    "build:tokens": "nx build tokens",
    "build:core": "nx build core",
    "build:angular": "nx build angular",
    "build:all": "nx run-many --target=build --all",
    "tokens": "cd packages/tokens && npm run build",
    "preview": "nx serve-static docs",
    "test": "nx test docs",
    "test:components": "nx test angular",
    "lint": "nx lint docs",
    "lint:all": "nx run-many --target=lint --all",
    "e2e": "nx e2e docs-e2e",
    "graph": "nx graph",
    "format:check": "prettier --check .",
    "format": "prettier --write .",
    "prepare": "husky"
  },
  "private": true,
  "devDependencies": {
