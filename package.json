{
  "name": "@luma/source",
  "version": "0.0.0",
  "license": "MIT",
  "engines": {
    "node": ">=24.0.0"
  },
  "scripts": {
    "dev": "nx serve playground",
    "start": "nx serve playground",
    "build": "nx build playground",
    "build:prod": "nx build playground --configuration=production",
    "build:tokens": "nx build tokens",
    "build:components": "nx build components",
    "build:all": "nx run-many --target=build --all",
    "tokens": "cd packages/tokens && npm run build",
    "preview": "nx serve-static playground",
    "test": "nx test playground",
    "test:components": "nx test components",
    "lint": "nx lint playground",
    "lint:all": "nx run-many --target=lint --all",
    "e2e": "nx e2e playground-e2e",
    "graph": "nx graph",
    "format:check": "prettier --check .",
    "format": "prettier --write .",
    "link:setup": "cd packages/tokens && npm link && cd ../components && npm link && cd ../luma && npm link @luma/tokens @luma/components && npm link && cd ../../apps/playground && npm link luma",
    "link:meta": "cd packages/luma && npm link && cd ../../apps/playground && npm link luma",
    "link:build": "npm run build:prod && npm run link:setup",
    "test:pre-commit": "npm run link:build && npm run preview",
    "unlink:all": "cd apps/playground && npm unlink luma && npm unlink @luma/tokens && npm unlink @luma/components || true",
    "prepare": "husky"
  },
  "private": true,
  "devDependencies": {
    "@analogjs/vite-plugin-angular": "~2.2.2",
    "@analogjs/vitest-angular": "~2.2.2",
    "@angular-devkit/core": "~21.1.1",
    "@angular-devkit/schematics": "~21.1.1",
    "@angular/build": "~21.1.1",
    "@angular/cli": "~21.1.1",
    "@angular/compiler-cli": "~21.1.1",
    "@angular/language-service": "~21.1.1",
    "@eslint/js": "^9.8.0",
    "@nx/angular": "^22.3.3",
    "@nx/devkit": "22.4.1",
    "@nx/eslint": "22.4.1",
    "@nx/eslint-plugin": "22.4.1",
    "@nx/js": "22.4.1",
    "@nx/playwright": "22.4.1",
    "@nx/vite": "22.4.1",
    "@nx/vitest": "22.4.1",
    "@nx/web": "22.4.1",
    "@playwright/test": "^1.36.0",
    "@schematics/angular": "~21.1.1",
    "@swc-node/register": "~1.11.1",
    "@swc/core": "~1.15.10",
    "@swc/helpers": "~0.5.11",
    "@tailwindcss/postcss": "^4.1.18",
    "@types/express": "^4.17.21",
    "@types/node": "20.19.9",
    "@typescript-eslint/utils": "^8.40.0",
    "@vitest/coverage-v8": "^4.0.0",
    "@vitest/ui": "^4.0.8",
    "angular-eslint": "^21.0.1",
    "eslint": "^9.8.0",
    "eslint-config-prettier": "^10.0.0",
    "eslint-plugin-playwright": "^1.6.2",
    "husky": "^9.1.7",
    "jsdom": "^27.1.0",
    "lint-staged": "^16.2.7",
    "nx": "22.4.1",
    "postcss": "^8.5.6",
    "postcss-import": "^16.1.1",
    "prettier": "~3.8.1",
    "tailwindcss": "^4.1.18",
    "tslib": "^2.3.0",
    "typescript": "~5.9.2",
    "typescript-eslint": "^8.40.0",
    "vite": "^7.0.0",
    "vitest": "^4.0.8"
  },
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "dependencies": {
    "@angular-devkit/build-angular": "~21.1.1",
    "@angular/common": "~21.1.1",
    "@angular/compiler": "~21.1.1",
    "@angular/core": "~21.1.1",
    "@angular/forms": "~21.1.1",
    "@angular/platform-browser": "~21.1.1",
    "@angular/platform-server": "~21.1.1",
    "@angular/router": "~21.1.1",
    "@angular/ssr": "~21.1.1",
    "class-variance-authority": "^0.7.1",
    "express": "^4.21.2",
    "highlight.js": "^11.11.1",
    "ngx-highlightjs": "^14.0.1",
    "rxjs": "~7.8.0"
  },
  "lint-staged": {
    "*.{ts,js,html}": [
      "eslint --fix"
    ],
    "*.{ts,js,html,css,json,md}": [
      "prettier --write"
    ]
  }
}
