{
  "name": "@lumaui/core",
  "version": "0.1.2",
  "description": "Core variants and types for Luma UI - framework-agnostic CVA definitions",
  "type": "module",
  "main": "./src/index.js",
  "module": "./src/index.js",
  "types": "./src/index.d.ts",
  "exports": {
    ".": {
      "types": "./src/index.d.ts",
      "import": "./src/index.js"
    },
    "./variants": {
      "types": "./src/variants/index.d.ts",
      "import": "./src/variants/index.js"
    },
    "./types": {
      "types": "./src/types/index.d.ts",
      "import": "./src/types/index.js"
    }
  },
  "files": [
    "src/",
    "README.md"
  ],
  "peerDependencies": {
    "class-variance-authority": "^0.7.1"
  },
  "keywords": [
    "design-system",
    "neo-minimal",
    "luma",
    "lumaui",
    "cva",
    "variants",
    "class-variance-authority"
  ],
  "publishConfig": {
    "access": "public"
  },
  "license": "MIT",
  "author": "Luma UI Team",
  "repository": {
    "type": "git",
    "url": "https://github.com/lumaui/luma-ui.git",
    "directory": "packages/core"
  },
  "homepage": "https://github.com/lumaui/luma-ui#readme",
  "bugs": {
    "url": "https://github.com/lumaui/luma-ui/issues"
  }
}
